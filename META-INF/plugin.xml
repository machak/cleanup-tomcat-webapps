<idea-plugin version="2">
  <id>com.machak.tomcat.plugin.id</id>
  <name>Cleanup tomcat webapps dir</name>
  <version>1.0.2</version>
  <vendor email="me@machak.com" url="https://github.com/machak/intellij-cleanup-tomcat-dir">machak</vendor>

  <description><![CDATA[
      Cleanup tomcat webapps dir
      ]]></description>

  <change-notes><![CDATA[
      1.0 initial release <br />
      ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="107.105"/>

  <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.machak.idea.plugins.com.intellij.modules.lang</depends>
  -->


  <application-components>
    <component>
      <implementation-class>com.machak.idea.plugins.config.ApplicationComponent</implementation-class>
    </component>
  </application-components>
  <project-components>
    <component>
      <implementation-class>com.machak.idea.plugins.config.ProjectComponent</implementation-class>
    </component>
  </project-components>

  <actions>
    <action icon="/icons/icon_delete.png" id="g-delete-tomcat-dir" class="com.machak.idea.plugins.actions.DeleteTomcatWebapps" text="DeleteTomcatWebapps" description="Delete tomcat webapps dir">
      <add-to-group group-id="ToolsMenu" anchor="last"/>
      <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl D" second-keystroke="shift ctrl alt D"/>
    </action>
  </actions>

</idea-plugin>